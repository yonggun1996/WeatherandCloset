<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="130dip"
        android:layout_height="30dip"
        android:layout_marginStart="20dip"
        android:layout_marginTop="60dip"
        android:layout_marginBottom="30dip"
        android:gravity="center"
        android:text="출근(등교)시간"
        android:textSize="20sp"
        android:textColor="@color/text"
        app:layout_constraintBottom_toTopOf="@+id/out1_date1_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/out1_date1_spinner"
        android:layout_width="220dip"
        android:layout_height="20dip"
        android:layout_marginStart="20dip"
        android:layout_marginTop="30dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Spinner
        android:id="@+id/out1_time1_spinner"
        android:layout_width="140dip"
        android:layout_height="20dip"
        android:layout_marginStart="10dip"
        android:layout_marginTop="30dip"
        android:layout_marginEnd="10dip"
        android:layout_marginBottom="30dip"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/out1_date1_spinner"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="30dip"
        android:layout_height="25dip"
        android:layout_marginStart="210dip"
        android:layout_marginTop="30dip"
        android:gravity="center"
        android:text="부터"
        android:textSize="15sp"
        android:textColor="@color/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/out1_date1_spinner" />

    <Spinner
        android:id="@+id/out1_date2_spinner"
        android:layout_width="220dip"
        android:layout_height="20dip"
        android:layout_marginStart="20dip"
        android:layout_marginTop="30dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Spinner
        android:id="@+id/out1_time2_spinner"
        android:layout_width="140dip"
        android:layout_height="20dip"
        android:layout_marginStart="10dip"
        android:layout_marginTop="30dip"
        android:layout_marginEnd="10dip"
        android:layout_marginBottom="40dip"
        app:layout_constraintBottom_toTopOf="@+id/waring_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/out1_date2_spinner"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="130dip"
        android:layout_height="30dip"
        android:layout_marginStart="20dip"
        android:layout_marginTop="40dip"
        android:gravity="center"
        android:text="퇴근(하교)시간"
        android:textSize="20sp"
        android:textColor="@color/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waring_tv" />

    <Spinner
        android:id="@+id/out2_date1_spinner"
        android:layout_width="220dip"
        android:layout_height="20dip"
        android:layout_marginStart="20dip"
        android:layout_marginTop="30dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Spinner
        android:id="@+id/out2_time1_spinner"
        android:layout_width="140dip"
        android:layout_height="20dip"
        android:layout_marginStart="10dip"
        android:layout_marginTop="30dip"
        android:layout_marginEnd="10dip"
        android:layout_marginBottom="30dip"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/out2_date1_spinner"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="30dip"
        android:layout_height="25dip"
        android:layout_marginStart="210dip"
        android:layout_marginTop="30dip"
        android:gravity="center"
        android:text="부터"
        android:textSize="15sp"
        android:textColor="@color/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/out2_date1_spinner" />

    <Spinner
        android:id="@+id/out2_date2_spinner"
        android:layout_width="220dip"
        android:layout_height="20dip"
        android:layout_marginStart="20dip"
        android:layout_marginTop="30dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Spinner
        android:id="@+id/out2_time2_spinner"
        android:layout_width="140dip"
        android:layout_height="20dip"
        android:layout_marginStart="10dip"
        android:layout_marginTop="30dip"
        android:layout_marginEnd="10dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/out2_date2_spinner"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/confilm"
        android:layout_width="360dip"
        android:layout_height="50dip"
        android:layout_marginTop="40dip"
        android:layout_marginBottom="100dp"
        android:background="@drawable/layout_border"
        android:text="설정한 시간으로 확인"
        android:textColor="@color/text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/out2_date2_spinner" />

    <TextView
        android:id="@+id/waring_tv"
        android:layout_width="280dip"
        android:layout_height="20dip"
        android:layout_marginStart="20dip"
        android:layout_marginTop="40sp"
        android:layout_marginBottom="40dip"
        android:text="성별과 출근(등교)시간은 꼭 설정해주세요"
        android:textColor="#FF8200"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/out1_date2_spinner" />

    <RadioGroup
        android:id="@+id/sex_Radio"
        android:layout_width="150dip"
        android:layout_height="20dip"
        android:layout_marginTop="65dip"
        android:layout_marginEnd="10dip"
        android:layout_marginBottom="35dip"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/out1_time1_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="70dip"
            android:layout_height="20dip"
            android:text="남성" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="70dip"
            android:layout_height="20dip"
            android:text="여성" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="50dip"
        android:layout_height="30dip"
        android:layout_marginTop="60dip"
        android:layout_marginEnd="5dip"
        android:layout_marginBottom="30dip"
        android:gravity="center"
        android:text="성별"
        android:textSize="20sp"
        android:textColor="@color/text"
        app:layout_constraintBottom_toTopOf="@+id/out1_time1_spinner"
        app:layout_constraintEnd_toStartOf="@+id/sex_Radio"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nowtime_confirm"
        android:layout_width="360dip"
        android:layout_height="50dip"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dip"
        android:background="@drawable/layout_border"
        android:text="현재 시간으로 확인"
        android:textColor="@color/text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confilm" />


</androidx.constraintlayout.widget.ConstraintLayout>